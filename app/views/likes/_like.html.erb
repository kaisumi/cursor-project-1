<% if logged_in? %>
  <% if current_user.likes?(post) %>
    <%= button_to like_path(current_user.likes.find_by(post: post)), method: :delete, class: "flex items-center text-red-500 hover:text-red-700", data: { turbo_frame: "likes-#{post.id}" } do %>
      <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
      </svg>
      <span><%= post.likes.count %></span>
    <% end %>
  <% else %>
    <%= button_to post_likes_path(post), method: :post, class: "flex items-center text-gray-500 hover:text-red-500", data: { turbo_frame: "likes-#{post.id}" } do %>
      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
      </svg>
      <span><%= post.likes.count %></span>
    <% end %>
  <% end %>
<% else %>
  <div class="flex items-center text-gray-500">
    <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
    </svg>
    <span><%= post.likes.count %></span>
  </div>
<% end %>
