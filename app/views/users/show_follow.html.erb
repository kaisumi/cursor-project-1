<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <h1 class="text-2xl font-bold"><%= @user.name.present? ? @user.name : @user.email %> - <%= @title %></h1>
  </div>
  
  <div class="mb-6">
    <h2 class="text-xl font-bold mb-4"><%= @title %></h2>
    <div class="space-y-4">
      <% @users.each do |user| %>
        <div class="bg-white rounded-lg shadow p-4">
          <div class="flex items-center justify-between">
            <div>
              <%= link_to user.name.present? ? user.name : user.email, user_path(user), class: "font-bold hover:text-blue-500" %>
            </div>
            
            <% if logged_in? && user != current_user %>
              <div>
                <% if current_user.following?(user) %>
                  <%= button_to "フォロー解除", relationship_path(current_user.active_relationships.find_by(followed_id: user.id)), 
                       method: :delete, 
                       class: "py-1 px-3 border border-gray-300 rounded-md text-xs text-gray-700 hover:bg-gray-100" %>
                <% else %>
                  <%= button_to "フォローする", relationships_path, 
                       params: { followed_id: user.id }, 
                       class: "py-1 px-3 bg-blue-500 text-white rounded-md text-xs hover:bg-blue-600" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
