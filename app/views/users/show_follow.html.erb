<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <div class="flex items-center mb-6">
      <%= link_to :back, class: 'mr-4 text-gray-500 hover:text-gray-700' do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
      <% end %>
      <h1 class="text-2xl font-bold"><%= @title %></h1>
    </div>

    <% if @users.any? %>
      <div class="divide-y divide-gray-200">
        <% @users.each do |user| %>
          <div class="flex items-center justify-between py-4">
            <div class="flex items-center space-x-4">
              <%= link_to user_path(user), class: 'flex-shrink-0' do %>
                <% if user.avatar.attached? %>
                  <%= image_tag user.avatar, class: 'w-12 h-12 rounded-full object-cover' %>
                <% else %>
                  <%= image_tag 'default-avatar.png', class: 'w-12 h-12 rounded-full object-cover', alt: user.name %>
                <% end %>
              <% end %>
              <div>
                <%= link_to user_path(user), class: 'block hover:underline' do %>
                  <h3 class="font-semibold text-gray-900"><%= user.name %></h3>
                <% end %>
                <p class="text-sm text-gray-500">@<%= user.username %></p>
                <% if user.bio.present? %>
                  <p class="mt-1 text-sm text-gray-600 line-clamp-1"><%= user.bio %></p>
                <% end %>
              </div>
            </div>
            
            <% if user_signed_in? && current_user != user %>
              <%= render 'users/follow_button', user: user %>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <div class="mt-6">
        <%= paginate @users, theme: 'tailwind' %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">ユーザーが見つかりません</h3>
        <p class="mt-1 text-sm text-gray-500">表示できるユーザーが存在しません。</p>
      </div>
    <% end %>
  </div>
</div>
</div>
