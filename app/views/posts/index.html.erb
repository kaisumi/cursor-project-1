<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-4">投稿一覧</h1>
  
  <% if logged_in? %>
    <div class="mb-6">
      <%= link_to "新規投稿", new_post_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
  
  <div id="posts" class="space-y-4">
    <%= render partial: "post", collection: @posts %>
  </div>
</div>
