<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold">投稿一覧</h1>
    <% if user_signed_in? %>
      <%= link_to '新規投稿', new_post_path, class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
    <% end %>
  </div>

  <div class="space-y-6">
    <% @posts.each do |post| %>
      <div class="bg-white shadow rounded-lg p-6">
        <div class="flex items-center mb-4">
          <div class="flex-shrink-0">
            <%= image_tag(post.user.avatar_url || asset_path('default_avatar.png'), class: 'h-10 w-10 rounded-full') %>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-900"><%= post.user.name %></p>
            <p class="text-sm text-gray-500"><%= l post.created_at, format: :long %></p>
          </div>
        </div>

        <div class="mb-4">
          <h2 class="text-xl font-semibold mb-2">
            <%= link_to post.title, post_path(post), class: 'hover:text-indigo-600' %>
          </h2>
          <p class="text-gray-600"><%= truncate(post.content, length: 200) %></p>
        </div>

        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <span class="text-gray-500">
              <i class="far fa-comment"></i>
              <%= post.comments.count %>
            </span>
            <span class="text-gray-500">
              <i class="far fa-heart"></i>
              <%= post.likes.count %>
            </span>
          </div>

          <% if user_signed_in? && post.editable_by?(current_user) %>
            <div class="flex items-center space-x-2">
              <%= link_to '編集', edit_post_path(post), class: 'text-sm text-gray-600 hover:text-indigo-600' %>
              <%= button_to '削除', post_path(post), method: :delete, class: 'text-sm text-red-600 hover:text-red-800', form: { data: { turbo_confirm: '本当に削除しますか？' } } %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div> 