<%= form_with(model: post, class: "space-y-4") do |form| %>
  <% if post.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <h2><%= pluralize(post.errors.count, "error") %>が発生しました:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= form.label :content, "投稿内容", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= form.text_area :content, rows: 4, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
    </div>
    <p class="mt-2 text-sm text-gray-500">最大280文字まで</p>
  </div>
  
  <div>
    <%= form.submit "投稿する", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
