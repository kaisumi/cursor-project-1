<div class="container mx-auto px-4 py-8">
  <div class="mb-4">
    <%= link_to "← 投稿一覧に戻る", posts_path, class: "text-blue-500 hover:text-blue-700" %>
  </div>
  
  <%= render @post %>
  
  <% if logged_in? && current_user == @post.user %>
    <div class="mt-4 flex space-x-2">
      <%= link_to "編集", edit_post_path(@post), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= button_to "削除", post_path(@post), method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded", form: { data: { turbo_confirm: "本当に削除しますか？" } } %>
    </div>
  <% end %>
</div>
