<!DOCTYPE html>
<html>
  <head>
    <title>CursorProject1</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <!-- ナビゲーションバー -->
    <nav class="bg-white shadow-sm fixed w-full z-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex">
            <div class="flex-shrink-0 flex items-center">
              <%= link_to root_path, class: "text-xl font-bold text-indigo-600" do %>
                CursorProject1
              <% end %>
            </div>
          </div>
          <div class="hidden sm:ml-6 sm:flex sm:items-center">
            <% if user_signed_in? %>
              <div class="ml-3 relative">
                <div class="flex items-center space-x-4">
                  <span class="text-gray-700"><%= current_user.email %></span>
                  <%= link_to 'ダッシュボード', dashboard_path, class: 'text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium' %>
                  <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: 'text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium' %>
                </div>
              </div>
            <% else %>
              <div class="flex space-x-4">
                <%= link_to 'ログイン', new_user_session_path, class: 'text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium' %>
                <%= link_to '新規登録', new_user_registration_path, class: 'bg-indigo-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-indigo-700' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <!-- フラッシュメッセージ -->
    <% if notice.present? %>
      <div class="fixed top-20 right-4 z-50">
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
          <span class="block sm:inline"><%= notice %></span>
        </div>
      </div>
    <% end %>

    <% if alert.present? %>
      <div class="fixed top-20 right-4 z-50">
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <span class="block sm:inline"><%= alert %></span>
        </div>
      </div>
    <% end %>

    <main class="container mx-auto px-4 py-24">
      <%= yield %>
    </main>
  </body>
</html>
