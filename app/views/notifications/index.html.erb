<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6">
    <h1 class="text-2xl font-bold mb-4 sm:mb-0">通知</h1>
    <% if @notifications.unread.any? %>
      <%= button_to "すべて既読にする", 
                  mark_all_as_read_notifications_path, 
                  method: :post, 
                  class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50",
                  aria: { label: "すべての通知を既読にする" } %>
    <% end %>
  </div>

  <div id="notification-list" class="space-y-4" aria-live="polite">
    <% if @notifications.any? %>
      <%= render @notifications %>
    <% else %>
      <div class="bg-gray-100 p-4 rounded text-center" role="status">
        <p class="text-gray-600">通知はありません</p>
      </div>
    <% end %>
  </div>
</div>
