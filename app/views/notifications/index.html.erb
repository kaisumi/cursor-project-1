<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">通知</h1>
    <% if @notifications.unread.any? %>
      <%= button_to "すべて既読にする", mark_all_as_read_notifications_path, method: :post, class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded" %>
    <% end %>
  </div>

  <div id="notification-list" class="space-y-4">
    <% if @notifications.any? %>
      <%= render @notifications %>
    <% else %>
      <div class="bg-gray-100 p-4 rounded text-center">
        <p class="text-gray-600">通知はありません</p>
      </div>
    <% end %>
  </div>
</div>
