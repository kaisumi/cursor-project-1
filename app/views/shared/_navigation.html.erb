      <%= link_to "検索", search_index_path, class: "border-transparent text-gray-500 hover:bg-gray-50 hover:border-blue-500 hover:text-blue-600 block pl-3 pr-4 py-2 border-l-4 text-base font-medium" %>
      <%= link_to "通知", notifications_path, class: "border-transparent text-gray-500 hover:bg-gray-50 hover:border-blue-500 hover:text-blue-600 block pl-3 pr-4 py-2 border-l-4 text-base font-medium" %>
