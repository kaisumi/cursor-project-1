  <!-- モバイルメニュー -->
  <div id="mobile-menu" class="hidden sm:hidden">
    <div class="pt-2 pb-3 space-y-1">
      <%= link_to "ホーム", root_path, class: "border-transparent text-gray-500 hover:bg-gray-50 hover:border-blue-500 hover:text-blue-600 block pl-3 pr-4 py-2 border-l-4 text-base font-medium" %>
