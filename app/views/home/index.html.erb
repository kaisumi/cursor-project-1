<div class="container mx-auto px-4 py-8">
  <h1 class="font-bold text-4xl mb-6">Welcome to Our Application</h1>
  
  <% if user_signed_in? %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <p>Welcome back, <strong><%= current_user.name %></strong>!</p>
      <p>You are signed in with: <%= current_user.email %></p>
    </div>
    
    <div class="mt-4">
      <%= link_to "Edit Profile", edit_user_registration_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2" %>
      <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% else %>
    <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded mb-4">
      <p>Please sign in or create an account to get started.</p>
    </div>
    
    <div class="mt-4">
      <%= link_to "Sign In", new_user_session_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
